<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rel_flipper_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<ScrollView
    android:id="@+id/movie_flipper_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="horizontal"
    android:fillViewport="true"
    android:isScrollContainer="false"
    android:nestedScrollingEnabled="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/black"
        android:gravity="center_vertical|center">

<Button
    android:layout_width="wrap_content"
    android:layout_height="80dp"
    android:id="@+id/btnreleasedate"
    android:drawablePadding="10dp"
    android:drawableTop="@drawable/datepicker"
    android:background="@color/transparent"
    android:textColor="@color/white"
    android:padding="10dp"
    android:textAllCaps="false"
    android:text="28/10/2018"
    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/btnstar"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/star"
        android:background="@color/transparent"
        android:textColor="@color/white"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:text="1234"
        android:textAllCaps="false"
        />







        <Button
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/btnlanguage"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/language"
            android:background="@color/transparent"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:textAllCaps="false"
            android:text="en"
            />




    </LinearLayout>

</ScrollView>

</RelativeLayout>